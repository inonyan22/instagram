<div class="container">
  <div class="wrapper col-md-5 col-md-offset-4 col-sm-10">

<h2>アカウント作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
  <br />
   <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
 </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder:"パスワード(6文字以上にしてください)"  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder:"確認用パスワード"%>
  </div>

  <div class="actions">
    <%= f.submit "アカウント作成", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
