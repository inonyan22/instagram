<div class="container">
  <div class="wrapper col-md-5 col-md-offset-4 col-sm-10">
<h2>ユーザー情報を編集する </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true,class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
   <br />
   <%= f.text_field :name, class: "form-control",class: "form-control", placeholder: "名前" %>
  </div>

<% if @user.provider.blank? %>

 <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
   <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
 <% end %>

  <div class="field">
    <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", autocomplete: "off", placeholder: "パスワード確認" %>
  </div>

  <div class="field">
  <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", autocomplete: "off", placeholder: "現在のパスワード" %>
  </div>

<% end %>

  <div class="field">
    <%= profile_img(@user) if profile_img(@user) %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-default" %>
  </div>
<% end %>

<h3>アカウントを削除する</h3>

<div class="field">
<p>削除しますか？ <%= button_to "削除する。", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete, class: "btn btn-default"  %></p>
</div>
<%= link_to "戻る", :back, class: "btn btn-default"   %>
</div>
</div>
